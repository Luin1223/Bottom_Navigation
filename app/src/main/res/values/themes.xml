<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BottomNavigation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_botton</item>
        <item name="android:windowExitAnimation">@anim/slide_out_botton</item>
    </style>

    <style name="Theme.SearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/baseline_clear</item>
        ·<item name="queryHint">輸入關鍵字</item>
        <item name="title">已完成</item>
        <!--<item name="queryBackground">@drawable/background</item>-->
    </style>

    <style name="AppTheme.Theme1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
